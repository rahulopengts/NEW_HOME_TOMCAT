#include <stdio.h>
#include <stdlib.h>

int main()
{
	char file[]="proper.txt";

	FILE fp = fopen(file,"r");
	char line[3];
char name[10];
char value[10];
	if (fp == NULL){
	  fprintf(stderr, "Can't open file %s!\n", file);
	  exit(1);
	}
	int count;
	for (count = 0; count < 3; count++){
	   if (fgets(line,sizeof(line),fp)==NULL)
	      break;
	   else {

	      //do things with line variable

	      name = strtok(line, '=');
	      value = strtok(NULL, '=');



	  }
	}

	fclose(fp);
	return 0;
}
